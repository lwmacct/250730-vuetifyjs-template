# claude 沙箱模式
IS_SANDBOX=1

# uv 的链接工作模式
UV_LINK_MODE=copy

# 服务器配置
SERVER_PORT=8080
SERVER_MODE=debug
SERVER_READ_TIMEOUT=15
SERVER_WRITE_TIMEOUT=15

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=vuetify_app
DB_SSLMODE=disable
DB_MAX_OPEN=25
DB_MAX_IDLE=5
DB_MAX_LIFE=300

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10

# JWT配置
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRE_HOURS=24
JWT_ISSUER=vuetify-app

# Casbin配置
CASBIN_MODEL_PATH=./configs/rbac_model.conf
CASBIN_POLICY_FILE=./configs/rbac_policy.csv
